<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>Servlet_app</display-name>
  <filter>
  	<filter-name>encode</filter-name>
  	<filter-class>com.yang.app.filters.EncodingFilter</filter-class>
  </filter>
  
  <filter-mapping>
  	<filter-name>encode</filter-name>
  	<url-pattern>/*</url-pattern>
  </filter-mapping>
  
  <servlet>
  	<servlet-name>homeController</servlet-name>
  	<servlet-class>com.yang.app.HomeController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>homeController</servlet-name>
  	<url-pattern>/index.do</url-pattern>
  </servlet-mapping>
  <servlet>
  	<servlet-name>productController</servlet-name>
  	<servlet-class>com.yang.app.products.ProductController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>productController</servlet-name>
  	<url-pattern>/products/*</url-pattern>
  </servlet-mapping>
</web-app>